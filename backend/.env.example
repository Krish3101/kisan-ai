# KisanAI Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ===================API Keys====================
# OpenWeather API Key (get from https://openweathermap.org/api)
OPENWEATHER_KEY=your_openweather_api_key_here

# OpenRouter API Key for LLM (get from https://openrouter.ai/)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# India Government Data API Key (get from https://data.gov.in/)
# Optional - has default value for testing
INDIA_GOV_API_KEY=your_india_gov_api_key_here

# ===================Server Configuration====================
# Server host and port
HOST=0.0.0.0
PORT=9000

# Environment: development or production
ENV=development

# ===================LLM Configuration====================
# LLM Model to use
LLM_MODEL=meta-llama/llama-3.1-8b-instruct:free

# LLM Request timeout in seconds
LLM_TIMEOUT=30

# ===================Cache Configuration====================
# Weather cache Time-To-Live in seconds (default: 6 hours)
WEATHER_CACHE_TTL=21600

# Price cache Time-To-Live in seconds (default: 6 hours)
PRICE_CACHE_TTL=21600

# ===================Logging====================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===================Authentication====================
# Secret key for JWT tokens - CHANGE THIS IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars

# ===================Database====================
# SQLite database path (relative to backend directory)
# DATABASE_URL=sqlite:///./data/kisanai.db
