# Production Environment Configuration
DEBUG=false
LOG_LEVEL=WARNING
API_V1_STR=/api/v1

# Database (Update with actual production DB)
DATABASE_URL=postgresql://user:password@prod-db:5432/kisanai

# Security (Generate strong random secret for production)
SECRET_KEY=CHANGE-THIS-TO-VERY-STRONG-RANDOM-SECRET-IN-PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# External APIs (Use production API keys)
OPENWEATHER_API_KEY=your-production-openweather-api-key
INDIA_GOV_API_KEY=your-production-india-gov-api-key
OPENROUTER_API_KEY=your-production-openrouter-api-key

# CORS (Update with production frontend URL)
BACKEND_CORS_ORIGINS=["https://kisanai.com","https://www.kisanai.com"]

# Cache
CACHE_TTL_WEATHER=21600
CACHE_TTL_PRICES=86400

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-production

# Performance
WORKERS=4
